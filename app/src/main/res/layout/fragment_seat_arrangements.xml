<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent_background"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/chat_seats_arrangements_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="5dip" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp" >

            <TextView
                android:id="@+id/rowtext"
                android:layout_width="90px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="3.0px"
                android:gravity="center"
                android:text="@string/row"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/editrow"
                android:layout_width="650dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@mipmap/focused_holo_light"
                android:ems="4"
                android:gravity="center"
                android:hint="@string/seat_row_col"
                android:maxLength="2"
                android:inputType="number"
                android:textColor="@color/white" >

                <requestFocus />
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" >

            <TextView
                android:id="@+id/coltext"
                android:layout_width="90px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="3.0px"
                android:gravity="center"
                android:text="@string/col"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/editcol"
                android:layout_width="650dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@mipmap/focused_holo_light"
                android:ems="4"
                android:gravity="center"
                android:hint="@string/seat_row_col"
                android:maxLength="2"
                android:inputType="number"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

        <ScrollView
            android:layout_width="730dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="7dp"
            android:gravity="center"
            android:orientation="vertical" >

            <HorizontalScrollView
                android:id="@+id/horizontalScrollView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TableLayout
                        android:id="@+id/table"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:layout_marginLeft="13dp"
                        android:layout_marginRight="13dp"
                        android:layout_marginTop="3dp" >
                    </TableLayout>
                </LinearLayout>
            </HorizontalScrollView>
        </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="50dp"
        android:layout_marginTop="10dp"
        android:gravity="center" >

        <Button
            android:id="@+id/plan"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:background="@drawable/sendbuttonchage"
            android:text="@string/plan"
            style="?android:attr/buttonStyle"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <Button
            android:id="@+id/addbtn"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:layout_marginLeft="80dp"
            android:background="@drawable/sendbuttonchage"
            android:text="@string/addtable"
            style="?android:attr/buttonStyle"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <Button
            android:id="@+id/canclebtn"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/sendbuttonchage"
            android:text="@string/cancletable"
            style="?android:attr/buttonStyle"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <Button
            android:id="@+id/addfinishbtn"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/sendbuttonchage"
            android:text="@string/addfinish"
            style="?android:attr/buttonStyle"
            android:textColor="@color/white"
            android:textSize="24sp" />
    </LinearLayout>

</LinearLayout>