<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="521.0px"
        android:layout_height="554.0px"
        android:layout_marginTop="22.0px"
        android:orientation="vertical"
        android:background="@mipmap/music_lrc_bg">

        <com.goldingmedia.mvp.view.lrc.LrcView
            android:id="@+id/lrc"
            android:layout_width="472.0px"
            android:layout_height="510.0px"
            android:layout_marginLeft="26.0px"
            android:layout_marginTop="22.0px"
            android:gravity="center"
            android:textColor="#99ffffff" />

        <TextView
            android:id="@+id/nolrc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/nolrc"
            android:textColor="#80ffffff"
            android:textSize="26.0sp"
            android:visibility="gone" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="222.0px"
        android:orientation="vertical">



             <com.goldingmedia.mvp.view.ui.MTextView
                android:id="@+id/musicname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:layout_marginTop="46.0px"
                android:gravity="center_vertical"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                 android:drawableStart="@mipmap/music_name_full"
                android:textSize="20.0sp" />


             <com.goldingmedia.mvp.view.ui.MTextView
                android:id="@+id/musicalbum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:layout_marginTop="10.0px"
                android:gravity="center_vertical"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                 android:drawableStart="@mipmap/music_album_full"
                android:textSize="20.0sp" />

            <com.goldingmedia.mvp.view.ui.MTextView
                android:id="@+id/musicsinger"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0px"
                android:gravity="center_vertical"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:drawableStart="@mipmap/music_singer_full"
                android:textSize="20.0sp" />

        <RelativeLayout
            android:layout_width="227.0px"
            android:layout_height="227.0px"
            android:layout_marginLeft="8.0px"
            android:layout_marginTop="30.0px">

            <ImageView
                android:id="@+id/musiccover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="7.0px"
                android:layout_marginTop="16.0px"
                android:src="@mipmap/music_default" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>