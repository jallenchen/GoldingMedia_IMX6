<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">


    <RelativeLayout
        android:id="@+id/app_fl_0"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:focusable="false">

        <FrameLayout
            android:id="@+id/game_fl0"
            android:layout_width="523px"
            android:layout_height="338px"
            android:layout_marginLeft="62px"
            android:layout_marginRight="7px"
            android:background="@drawable/game_l_bg"
            android:gravity="center"
            android:padding="7px">

            <ImageView
                android:id="@+id/game_iv_0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/game_fl0"
            android:layout_marginLeft="65px"
            android:layout_marginRight="8px"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/game_fl1"
                android:layout_width="129px"
                android:layout_height="94px"
                android:background="@drawable/game_s_bg"
                android:gravity="center"
                android:padding="4px">

                <ImageView
                    android:id="@+id/game_iv_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/game_s_bg"
                    android:scaleType="fitXY" />

            </FrameLayout>


            <FrameLayout
                android:id="@+id/game_fl2"
                android:layout_width="129px"
                android:layout_height="94px"
                android:background="@drawable/game_s_bg"
                android:gravity="center"
                android:padding="4px">

                <ImageView
                    android:id="@+id/game_iv_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/game_s_bg"
                    android:scaleType="fitXY" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/game_fl3"
                android:layout_width="129px"
                android:layout_height="94px"
                android:background="@drawable/game_s_bg"
                android:gravity="center"
                android:padding="4px">

                <ImageView
                    android:id="@+id/game_iv_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/game_s_bg"
                    android:scaleType="fitXY"/>

            </FrameLayout>

            <FrameLayout
                android:id="@+id/game_fl4"
                android:layout_width="129px"
                android:layout_height="94px"
                android:background="@drawable/game_s_bg"
                android:gravity="center"
                android:padding="4px">

                <ImageView
                    android:id="@+id/game_iv_4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/game_s_bg"
                    android:scaleType="fitXY" />

            </FrameLayout>

        </LinearLayout>
    </RelativeLayout>


    <GridView
        android:id="@+id/gv_game"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="65px"
        android:listSelector="@color/transparent"
        android:numColumns="2"
        android:scrollbars="none"
        android:verticalSpacing="1px" />


</LinearLayout>
